<h2>文章列表</h2>
<%= will_paginate %>
<table class="table table-hover">
  <thead>
    <tr>
      <th>文章标题</th>
      <th>发表时间</th>
      <th>操作</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= link_to blog.title, blog %></td>
        <td>Posted <%= time_ago_in_words(blog.created_at) %></td>
        <td>
          <% if user_signed_in? %>
            <%= link_to '编辑', edit_blog_path(blog) %>
            <%= link_to '删除', blog, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% else %>
            <%= link_to '查看', blog %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate %>
<br>
<% if user_signed_in? %>
  <%= link_to '写新文章', new_blog_path %>
<% end %>

