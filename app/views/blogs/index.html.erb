<p id="notice"><%= notice %></p>

<h2>Listing Blogs</h2>
<%= will_paginate %>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Operate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td>
          <%= link_to 'Show', blog %>
          <%= link_to 'Edit', edit_blog_path(blog) %>
          <%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate %>
<br>

<%= link_to 'New Blog', new_blog_path %>
