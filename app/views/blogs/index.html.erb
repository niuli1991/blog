

<h2>Listing Blogs</h2>
<%= will_paginate %>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Operate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= link_to blog.title, blog %></td>
        <td>
          <% if user_signed_in? %>
            <%= link_to 'Edit', edit_blog_path(blog) %>
            <%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% else %>
            <%= link_to 'Show', blog %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate %>
<br>
<% if user_signed_in? %>
  <%= link_to 'New Blog', new_blog_path %>
<% end %>

